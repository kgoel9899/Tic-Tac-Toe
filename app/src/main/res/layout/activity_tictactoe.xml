<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:layout_centerVertical="true"
    tools:context="com.example.android.tictactoe.tictactoe"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:text="Player 1 (O)"
            android:textColor="@android:color/background_dark"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:text="Player 2 (X)"
            android:textColor="@android:color/background_dark"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/btn1"
            android:onClick="place1"
            android:adjustViewBounds="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"/>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <ImageView
            android:id="@+id/btn2"
            android:onClick="place2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <ImageView
            android:id="@+id/btn3"
            android:onClick="place3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <ImageView
            android:id="@+id/btn4"
            android:onClick="place4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <ImageView
            android:id="@+id/btn5"
            android:onClick="place5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <ImageView
            android:id="@+id/btn6"
            android:onClick="place6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/btn7"
            android:onClick="place7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <ImageView
            android:id="@+id/btn8"
            android:onClick="place8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <ImageView
            android:id="@+id/btn9"
            android:onClick="place9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"/>
    </LinearLayout>


</LinearLayout>
